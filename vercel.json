{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/fetch-meta", "dest": "/api/fetch-meta.js" },
    { "src": "/api/generate", "dest": "/api/generate.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/fetch-meta.js": { "maxDuration": 10 },
    "api/generate.js": { "maxDuration": 10 }
  }
}
